generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id Int  @default(autoincrement()) @id
  user_name String? @unique
  email String? @unique
  display_name String?
  is_active Boolean? @default(false)
  state Boolean? @default(false)
  avatar_url String?
  // relation between users table and friends table
}
